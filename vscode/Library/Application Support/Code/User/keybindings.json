[
  {
    "key": "ctrl+e", // toggle explorer.
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "space s f", // quick open.
    "command": "workbench.action.quickOpen",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space s b", // show open buffer
    "command": "workbench.action.quickOpenPreviousRecentlyUsedEditor",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space c p", // show all commands.
    "command": "workbench.action.showCommands",
    "when": "vim.mode == 'Normal' && editorFocus"
  },

  // Debugging
  {
    "key": "space d d", // run
    "command": "workbench.action.debug.start",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space d b", // toggle breakpoint
    "command": "editor.debug.action.toggleBreakpoint",
    "when": "vim.mode == 'Normal' && editorFocus"
  },

  {
    "key": "space s g", // grep
    "command": "workbench.action.findInFiles",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space c a", // quick fix/code action
    "command": "editor.action.quickFix",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space c r", // rename symbol
    "command": "editor.action.rename",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space g d", // go to definition
    "command": "editor.action.goToDeclaration",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space g i", // go to implementation
    "command": "editor.action.goToImplementation",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "shift-k", // hover to show documentation
    "command": "editor.action.showHover",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space c n", // create new file
    "command": "extension.advancedNewFile",
    "when": "vim.mode == 'Normal' && editorFocus"
  },

  // Navigation
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.terminal.focus",
    "when": "!terminalFocus"
  },
  {
    "key": "cmd+i",
    "command": "composerMode.agent"
  },

  // Terminal
  {
    "key": "cmd+k",
    "command": "workbench.action.terminal.clear"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  // Maximise/Minimise the terminal.
  {
    "key": "cmd+shift+j",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  // Focus the next/previous terminal.
  {
    "key": "cmd+]",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+[",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  }
]
