[
  {
    "key": "ctrl+e", // toggle explorer.
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "space s f", // quick open.
    "command": "workbench.action.quickOpen",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space c p", // show all commands.
    "command": "workbench.action.showCommands",
    "when": "vim.mode == 'Normal' && editorFocus"
  },

  // Debugging
  {
    "key": "space d d", // run
    "command": "workbench.action.debug.start",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space d b", // toggle breakpoint
    "command": "editor.debug.action.toggleBreakpoint",
    "when": "vim.mode == 'Normal' && editorFocus"
  },

  {
    "key": "space s g", // grep
    "command": "workbench.action.findInFiles",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space c a", // quick fix/code action
    "command": "editor.action.quickFix",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space c r", // rename symbol
    "command": "editor.action.rename",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space g d", // go to definition
    "command": "editor.action.goToDeclaration",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space g i", // go to implementation
    "command": "editor.action.goToImplementation",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "shift-k", // hover to show documentation
    "command": "editor.action.showHover",
    "when": "vim.mode == 'Normal' && editorFocus"
  },
  {
    "key": "space c n", // create new file
    "command": "extension.advancedNewFile",
    "when": "vim.mode == 'Normal' && editorFocus"
  }
]
